<?xml version="1.0" encoding="utf-8"?>
  <odoo>
    <data>
      <!-- webpage record -->
      <template id="report_pdf">
          <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">

              <br></br>
              <br></br>



